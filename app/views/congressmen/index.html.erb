<p id="notice"><%= notice %></p>

<h1>Deputados</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Phone</th>
      <th>Federation unity</th>
      <th>Email</th>
      <th>Political party</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @congressmen.each do |congressman| %>
      <tr>
        <td><%= congressman.name %></td>
        <td><%= image_tag(congressman.photo, :border => 0, :alt => '', :title => '') %></td>
        <td><%= congressman.phone %></td>
        <td><%= congressman.federation_unity %></td>
        <td><%= congressman.email %></td>
        <td><%= congressman.political_party.name %></td>
        <td><%= link_to 'Show', congressman %></td>
        <td><%= link_to 'Edit', edit_congressman_path(congressman) %></td>
        <td><%= link_to 'Destroy', congressman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

